{
  "manifest_version": 3,
  "name": "AlturaAI Copilot",
  "version": "0.1.0",
  "description": "Your AI-powered browser assistant.",
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://apis.google.com https://www.gstatic.com; child-src 'self' https://alturaai.firebaseapp.com; connect-src 'self' https://www.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com; object-src 'self'"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "storage",
    "identity",
    "scripting",
    "alarms",
    "contextMenus",
    "sidePanel",
    "debugger",
    "history"
  ],
  "oauth2": {
    "client_id": "296537793338-t1b2unbhm9tkjike4o018csg6irk6qdt.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/calendar.events.readonly"
    ]
  },
  "sandbox": {
    "pages": ["auth.html"]
  },
  "web_accessible_resources": [
    {
      "resources": ["auth.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open AlturaAI Sidebar"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  }
}
